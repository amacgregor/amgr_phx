<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc><%= root_domain() %><%= Routes.post_path(@conn, :index) %></loc>
        <changefreq>weekly</changefreq>
        <priority>0.5</priority>
    </url>
    <url>
        <loc><%= root_domain() %><%= Routes.til_path(@conn, :index) %></loc>
        <changefreq>weekly</changefreq>
        <priority>0.5</priority>
    </url>
    <url>
        <loc><%= root_domain() %><%= Routes.about_path(@conn, :show) %></loc>
        <changefreq>weekly</changefreq>
        <priority>0.5</priority>
    </url>
    <url>
        <loc><%= root_domain() %><%= Routes.projects_path(@conn, :show) %></loc>
        <changefreq>weekly</changefreq>
        <priority>0.5</priority>
    </url>
    <%= for post <- @posts do %>
    <url>
        <loc><%= root_domain() %><%= Routes.post_path(@conn, :show, post.id) %></loc>
        <lastmod><%= post.date %></lastmod>
        <changefreq>weekly</changefreq>
        <priority>1</priority>
    </url>
    <% end %>
    <%= for entry <- @til do %>
    <url>
        <loc><%= root_domain() %><%= Routes.til_path(@conn, :show, entry.id) %></loc>
        <lastmod><%= entry.date %></lastmod>
        <changefreq>weekly</changefreq>
        <priority>1</priority>
    </url>
    <% end %>
</urlset>